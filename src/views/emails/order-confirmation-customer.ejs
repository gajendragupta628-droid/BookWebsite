<div style="font-family: Inter, Arial, sans-serif; color:#0d0d0f">
  <h2>Thank you for your order, <%= order.customer.name %>!</h2>
  <p>Your order <strong><%= order.number %></strong> has been received.</p>
  <table style="width:100%; border-collapse:collapse">
    <thead><tr><th align="left">Item</th><th align="right">Total</th></tr></thead>
    <tbody>
      <% order.items.forEach(function(it){ %>
        <tr><td><%= it.titleSnapshot %> × <%= it.qty %></td><td align="right"><%= order.totals.currency %> <%= (it.qty*it.priceAtPurchase).toFixed(2) %></td></tr>
      <% }) %>
    </tbody>
  </table>
  <p><strong>Total:</strong> <%= order.totals.currency %> <%= order.totals.grandTotal.toFixed(2) %></p>
  <p>We will reach out when your order ships.</p>
  <p>— <%= env.STORE_NAME %></p>
</div>

