<div class="account-page">
  <div class="container-custom account-wrapper">
    <!-- Account Header -->
    <div class="account-header">
      <div class="user-info-header">
        <div class="user-avatar-large">
          <% if (currentUser.avatar) { %>
            <img src="<%= currentUser.avatar %>" alt="<%= currentUser.name %>" class="avatar-img" />
          <% } else { %>
            <span class="avatar-initial"><%= currentUser.name.charAt(0).toUpperCase() %></span>
          <% } %>
        </div>
        <div class="user-details">
          <h1 class="user-name"><%= currentUser.name %></h1>
          <p class="user-email"><%= currentUser.email %></p>
          <div class="user-badges">
            <% if (currentUser.isVerified) { %>
              <span class="badge-verified">✓ Verified</span>
            <% } %>
            <% if (currentUser.provider === 'google') { %>
              <span class="badge-google">Google Account</span>
            <% } %>
          </div>
        </div>
      </div>
      <div class="header-actions">
        <a href="/auth/logout" class="btn-logout">
          <span>Logout</span>
          <svg class="logout-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Account Navigation Tabs -->
    <div class="account-nav" role="tablist">
      <button class="nav-tab <%= activeTab === 'orders' ? 'active' : '' %>" data-tab="orders" type="button" role="tab">
        <svg class="tab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
        </svg>
        <span class="tab-text">Orders</span>
      </button>
      <button class="nav-tab <%= activeTab === 'wishlist' ? 'active' : '' %>" data-tab="wishlist" type="button" role="tab">
        <svg class="tab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
        <span class="tab-text">Wishlist</span>
      </button>
      <button class="nav-tab <%= activeTab === 'addresses' ? 'active' : '' %>" data-tab="addresses" type="button" role="tab">
        <svg class="tab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="tab-text">Addresses</span>
      </button>
      <button class="nav-tab <%= activeTab === 'settings' ? 'active' : '' %>" data-tab="settings" type="button" role="tab">
        <svg class="tab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="tab-text">Settings</span>
      </button>
    </div>

    <!-- Tab Content -->
    <div class="tab-content-wrapper">
      <!-- Orders Tab -->
      <div class="tab-panel <%= activeTab === 'orders' ? 'active' : '' %>" id="tab-orders" role="tabpanel">
        <div class="panel-header">
          <h2 class="panel-title">My Orders</h2>
          <div class="order-filters">
            <select class="filter-select" id="orderFilterSelect">
              <option value="all">All Orders</option>
              <option value="pending">Pending</option>
              <option value="processing">Processing</option>
              <option value="shipped">Shipped</option>
              <option value="delivered">Delivered</option>
              <option value="cancelled">Cancelled</option>
            </select>
          </div>
        </div>

        <% if (orders && orders.length > 0) { %>
          <div class="orders-list">
            <% orders.forEach(order => { %>
              <div class="order-card" data-order-status="<%= order.status %>">
                <div class="order-header-card">
                  <div class="order-info">
                    <div class="order-number">Order #<%= order.orderNumber || order._id.toString().slice(-8).toUpperCase() %></div>
                    <div class="order-date">Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                  </div>
                  <span class="order-status <%= order.status %>"><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></span>
                </div>

                <div class="order-items">
                  <% (order.items || []).slice(0, 3).forEach(item => { %>
                    <div class="order-item-preview">
                      <div class="item-image-small">
                        <% if (item.image) { %>
                          <img src="<%= item.image %>" alt="<%= item.title %>" />
                        <% } else { %>
                          <div class="placeholder-img">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                          </div>
                        <% } %>
                      </div>
                      <div class="item-details-small">
                        <div class="item-title-small"><%= item.title %></div>
                        <div class="item-qty-small">Qty: <%= item.qty %></div>
                      </div>
                    </div>
                  <% }); %>
                  <% if (order.items && order.items.length > 3) { %>
                    <div class="more-items">+<%= order.items.length - 3 %> more items</div>
                  <% } %>
                </div>

                <div class="order-footer">
                  <div class="order-total">
                    <span class="total-label">Total:</span>
                    <span class="total-amount"><%= store.currency %> <%= (order.totals && order.totals.grandTotal) ? order.totals.grandTotal.toFixed(2) : '0.00' %></span>
                  </div>
                  <a href="/orders/<%= order._id %>" class="btn-view-order">View Details</a>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
            </div>
            <h3 class="empty-title">No Orders Yet</h3>
            <p class="empty-description">Start shopping and your orders will appear here.</p>
            <a href="/search" class="btn-primary">Browse Books</a>
          </div>
        <% } %>
      </div>

      <!-- Wishlist Tab -->
      <div class="tab-panel <%= activeTab === 'wishlist' ? 'active' : '' %>" id="tab-wishlist" role="tabpanel">
        <div class="panel-header">
          <h2 class="panel-title">My Wishlist</h2>
          <a href="/wishlist" class="btn-secondary-sm">View Full Wishlist</a>
        </div>

        <% if (wishlistItems && wishlistItems.length > 0) { %>
          <div class="wishlist-grid-account">
            <% wishlistItems.slice(0, 6).forEach(book => { %>
              <div class="wishlist-item-card">
                <a href="/book/<%= book.slug %>" class="wishlist-item-image">
                  <% const imgSrc = (book.images && book.images[0] && book.images[0].src) ? book.images[0].src : (book.isbn ? `https://covers.openlibrary.org/b/isbn/${book.isbn}-M.jpg` : 'https://images.pexels.com/photos/768125/pexels-photo-768125.jpeg?auto=compress&cs=tinysrgb&w=300'); %>
                  <img src="<%= imgSrc %>" alt="<%= book.title %>" />
                </a>
                <div class="wishlist-item-info">
                  <a href="/book/<%= book.slug %>" class="wishlist-item-title"><%= book.title %></a>
                  <div class="wishlist-item-price"><%= store.currency %> <%= book.priceSale ? book.priceSale.toFixed(2) : '0.00' %></div>
                  <button class="btn-add-to-cart-small" data-add-to-cart data-id="<%= book._id %>">Add to Cart</button>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="empty-title">Your Wishlist is Empty</h3>
            <p class="empty-description">Save books you love to your wishlist.</p>
            <a href="/search" class="btn-primary">Discover Books</a>
          </div>
        <% } %>
      </div>

      <!-- Addresses Tab -->
      <div class="tab-panel <%= activeTab === 'addresses' ? 'active' : '' %>" id="tab-addresses" role="tabpanel">
        <div class="panel-header">
          <h2 class="panel-title">Saved Addresses</h2>
          <button class="btn-primary" id="showAddressModalBtn" type="button">
            <span>+</span>
            <span>Add New Address</span>
          </button>
        </div>

        <% if (currentUser.addresses && currentUser.addresses.length > 0) { %>
          <div class="addresses-grid" data-addresses='<%- JSON.stringify(currentUser.addresses || []) %>'>
            <% currentUser.addresses.forEach((addr, index) => { %>
              <div class="address-card <%= addr.isDefault ? 'default' : '' %>" data-address-index="<%= index %>">
                <div class="address-header">
                  <span class="address-label"><%= addr.label || 'Address' %></span>
                  <% if (addr.isDefault) { %>
                    <span class="default-badge">Default</span>
                  <% } %>
                </div>
                <div class="address-content">
                  <div class="address-name"><%= addr.fullName %></div>
                  <div class="address-text">
                    <%= addr.addressLine1 %><br />
                    <% if (addr.addressLine2) { %><%= addr.addressLine2 %><br /><% } %>
                    <%= addr.city %>, <%= addr.state || '' %> <%= addr.postalCode %><br />
                    <%= addr.country %>
                  </div>
                  <div class="address-phone">Phone: <%= addr.phone %></div>
                </div>
                <div class="address-actions">
                  <button class="btn-edit" data-edit-address="<%= index %>" type="button">Edit</button>
                  <button class="btn-delete" data-delete-address="<%= index %>" type="button">Delete</button>
                  <% if (!addr.isDefault) { %>
                    <button class="btn-set-default" data-set-default="<%= index %>" type="button">Set as Default</button>
                  <% } %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="empty-title">No Saved Addresses</h3>
            <p class="empty-description">Add an address for faster checkout.</p>
            <button class="btn-primary" id="showAddressModalBtnEmpty" type="button">Add Address</button>
          </div>
        <% } %>
      </div>

      <!-- Settings Tab -->
      <div class="tab-panel <%= activeTab === 'settings' ? 'active' : '' %>" id="tab-settings" role="tabpanel">
        <div class="panel-header">
          <h2 class="panel-title">Account Settings</h2>
        </div>

        <div class="settings-sections">
          <!-- Personal Information -->
          <div class="settings-section">
            <h3 class="settings-section-title">Personal Information</h3>
            <form action="/account/update-profile" method="POST" class="settings-form">
              <div class="form-row">
                <div class="form-group-settings">
                  <label class="label-settings">Full Name</label>
                  <input type="text" name="name" value="<%= currentUser.name %>" class="input-settings" required />
                </div>
                <div class="form-group-settings">
                  <label class="label-settings">Email Address</label>
                  <input type="email" name="email" value="<%= currentUser.email %>" class="input-settings" required />
                </div>
              </div>
              <div class="form-group-settings">
                <label class="label-settings">Phone Number</label>
                <input type="tel" name="phone" value="<%= currentUser.phone || '' %>" class="input-settings" />
              </div>
              <button type="submit" class="btn-save">Save Changes</button>
            </form>
          </div>

          <!-- Change Password (Local accounts only) -->
          <% if (currentUser.provider === 'local') { %>
            <div class="settings-section">
              <h3 class="settings-section-title">Change Password</h3>
              <form action="/account/change-password" method="POST" class="settings-form">
                <div class="form-group-settings">
                  <label class="label-settings">Current Password</label>
                  <input type="password" name="currentPassword" class="input-settings" required />
                </div>
                <div class="form-row">
                  <div class="form-group-settings">
                    <label class="label-settings">New Password</label>
                    <input type="password" name="newPassword" class="input-settings" required minlength="8" />
                  </div>
                  <div class="form-group-settings">
                    <label class="label-settings">Confirm New Password</label>
                    <input type="password" name="confirmPassword" class="input-settings" required />
                  </div>
                </div>
                <button type="submit" class="btn-save">Update Password</button>
              </form>
            </div>
          <% } %>

          <!-- Preferences -->
          <div class="settings-section">
            <h3 class="settings-section-title">Preferences</h3>
            <form action="/account/update-preferences" method="POST" class="settings-form">
              <div class="preferences-list">
                <label class="preference-item">
                  <input type="checkbox" name="newsletter" <%= currentUser.preferences?.newsletter ? 'checked' : '' %> class="preference-checkbox" />
                  <span class="preference-label">
                    <span class="preference-title">Newsletter</span>
                    <span class="preference-desc">Receive our newsletter with book recommendations and offers</span>
                  </span>
                </label>
                <label class="preference-item">
                  <input type="checkbox" name="orderUpdates" <%= currentUser.preferences?.orderUpdates ? 'checked' : '' %> class="preference-checkbox" />
                  <span class="preference-label">
                    <span class="preference-title">Order Updates</span>
                    <span class="preference-desc">Get notified about your order status</span>
                  </span>
                </label>
                <label class="preference-item">
                  <input type="checkbox" name="recommendations" <%= currentUser.preferences?.recommendations ? 'checked' : '' %> class="preference-checkbox" />
                  <span class="preference-label">
                    <span class="preference-title">Personalized Recommendations</span>
                    <span class="preference-desc">Receive book suggestions based on your interests</span>
                  </span>
                </label>
              </div>
              <button type="submit" class="btn-save">Save Preferences</button>
            </form>
          </div>

          <!-- Danger Zone -->
          <div class="settings-section danger-zone">
            <h3 class="settings-section-title">Danger Zone</h3>
            <div class="danger-content">
              <div class="danger-info">
                <h4 class="danger-title">Delete Account</h4>
                <p class="danger-desc">Permanently delete your account and all associated data. This action cannot be undone.</p>
              </div>
              <button class="btn-danger" id="deleteAccountBtn" type="button">Delete Account</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Address Modal -->
<div id="addressModal" class="address-modal" style="display: none;">
  <div class="modal-overlay" id="modalOverlay"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3 id="addressModalTitle" class="modal-title">Add New Address</h3>
      <button class="modal-close" id="modalCloseBtn" type="button" aria-label="Close">×</button>
    </div>
    
    <form id="addressForm" method="POST" action="/account/addresses/add" class="address-form">
      <div class="form-grid">
        <div class="form-group-full">
          <label>Label (e.g., Home, Office)</label>
          <input type="text" id="addressLabel" name="label" placeholder="Home" class="form-input">
        </div>
        
        <div class="form-group">
          <label>Full Name *</label>
          <input type="text" id="addressFullName" name="fullName" required class="form-input">
        </div>
        
        <div class="form-group">
          <label>Phone Number *</label>
          <input type="tel" id="addressPhone" name="phone" required class="form-input">
        </div>
        
        <div class="form-group-full">
          <label>Address Line 1 *</label>
          <input type="text" id="addressLine1" name="addressLine1" required placeholder="Street address" class="form-input">
        </div>
        
        <div class="form-group-full">
          <label>Address Line 2</label>
          <input type="text" id="addressLine2" name="addressLine2" placeholder="Apartment, suite, etc. (optional)" class="form-input">
        </div>
        
        <div class="form-group">
          <label>City *</label>
          <input type="text" id="addressCity" name="city" required class="form-input">
        </div>
        
        <div class="form-group">
          <label>State/Province</label>
          <input type="text" id="addressState" name="state" class="form-input">
        </div>
        
        <div class="form-group">
          <label>Postal Code *</label>
          <input type="text" id="addressPostalCode" name="postalCode" required class="form-input">
        </div>
        
        <div class="form-group">
          <label>Country *</label>
          <input type="text" id="addressCountry" name="country" value="Nepal" required class="form-input">
        </div>
        
        <div class="form-group-full">
          <label class="checkbox-label">
            <input type="checkbox" id="addressIsDefault" name="isDefault">
            <span>Set as default address</span>
          </label>
        </div>
      </div>
      
      <div class="modal-actions">
        <button type="button" class="btn-cancel" id="cancelAddressBtn">Cancel</button>
        <button type="submit" class="btn-save">Save Address</button>
      </div>
    </form>
  </div>
</div>

<style>
/* Account Page Styles - Mobile First */
.account-page {
  background: #f8f6f2;
  padding: 16px 0 100px;
  min-height: calc(100vh - 200px);
}

.account-wrapper {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 16px;
}

/* Account Header - Mobile First */
.account-header {
  display: flex;
  flex-direction: column;
  gap: 20px;
  padding: 24px 20px;
  background: white;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(13, 13, 15, 0.08);
  border: 1px solid rgba(13, 13, 15, 0.08);
  margin-bottom: 24px;
}

.user-info-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 16px;
}

.user-avatar-large {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #020617 0%, #1e293b 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(13, 13, 15, 0.2);
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-initial {
  font-size: 32px;
  font-weight: 700;
  color: white;
  font-family: 'Playfair Display', serif;
}

.user-details {
  width: 100%;
}

.user-name {
  font-family: 'Playfair Display', serif;
  font-size: 24px;
  font-weight: 700;
  color: #0d0d0f;
  margin-bottom: 6px;
  line-height: 1.2;
}

.user-email {
  font-size: 14px;
  color: rgba(13, 13, 15, 0.6);
  margin-bottom: 12px;
}

.user-badges {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  justify-content: center;
}

.badge-verified,
.badge-google {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
}

.badge-verified {
  background: rgba(46, 204, 113, 0.1);
  color: #27ae60;
}

.badge-google {
  background: rgba(66, 133, 244, 0.1);
  color: #4285F4;
}

.header-actions {
  width: 100%;
}

.btn-logout {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 24px;
  background: rgba(13, 13, 15, 0.05);
  color: #0d0d0f;
  border-radius: 12px;
  font-weight: 600;
  font-size: 14px;
  text-decoration: none;
  transition: all 0.2s ease;
  width: 100%;
  border: 1px solid rgba(13, 13, 15, 0.1);
}

.btn-logout:hover {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
  border-color: rgba(231, 76, 60, 0.2);
}

.logout-icon {
  width: 16px;
  height: 16px;
}

/* Account Navigation - Mobile First */
.account-nav {
  display: flex;
  gap: 8px;
  background: white;
  padding: 8px;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(13, 13, 15, 0.08);
  border: 1px solid rgba(13, 13, 15, 0.08);
  margin-bottom: 24px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.account-nav::-webkit-scrollbar {
  display: none;
}

.nav-tab {
  flex: 1;
  min-width: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 12px 16px;
  background: transparent;
  border: none;
