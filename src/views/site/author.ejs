<div class="author-page">
  <!-- Author Hero Section -->
  <section class="author-hero">
    <div class="author-hero-overlay"></div>
    <div class="container-custom author-hero-content">
      <!-- Breadcrumb -->
      <nav class="breadcrumb-author">
        <a href="/">Home</a>
        <span>/</span>
        <a href="/search">Authors</a>
        <span>/</span>
        <span><%= author.name %></span>
      </nav>

      <div class="author-hero-grid">
        <!-- Author Image -->
        <div class="author-image-section">
          <div class="author-avatar-large">
            <% if (author.image) { %>
              <img src="<%= author.image %>" alt="<%= author.name %>" class="author-photo" />
            <% } else { %>
              <div class="author-initial-large"><%= author.name.charAt(0) %></div>
            <% } %>
          </div>

          <!-- Social Links -->
          <% if (author.social) { %>
            <div class="author-social-links">
              <% if (author.social.website) { %>
                <a href="<%= author.social.website %>" class="social-link" target="_blank" rel="noopener" aria-label="Website">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M2 12h20M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
                  </svg>
                </a>
              <% } %>
              <% if (author.social.twitter) { %>
                <a href="<%= author.social.twitter %>" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              <% } %>
              <% if (author.social.instagram) { %>
                <a href="<%= author.social.instagram %>" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              <% } %>
            </div>
          <% } %>
        </div>

        <!-- Author Info -->
        <div class="author-info-section">
          <h1 class="author-name-title"><%= author.name %></h1>
          
          <% if (author.nationality) { %>
            <div class="author-meta">
              <svg class="meta-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M2 12h20M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
              </svg>
              <span class="meta-text"><%= author.nationality %></span>
            </div>
          <% } %>

          <% if (author.bio) { %>
            <p class="author-bio-preview"><%= author.bio %></p>
          <% } else { %>
            <p class="author-bio-preview">
              <%= author.name %> is a renowned author whose works have captivated readers worldwide. Explore their collection of thought-provoking and engaging books.
            </p>
          <% } %>

          <!-- Author Stats -->
          <div class="author-stats-grid">
            <div class="stat-card-author">
              <div class="stat-value-author"><%= total || items.length %></div>
              <div class="stat-label-author">Books</div>
            </div>
            <div class="stat-card-author">
              <div class="stat-value-author">
                4.5
                <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" style="margin-left:4px; vertical-align:-2px;">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <div class="stat-label-author">Avg Rating</div>
            </div>
            <div class="stat-card-author">
              <div class="stat-value-author"><%=Math.floor(Math.random() * 10000) + 1000%></div>
              <div class="stat-label-author">Readers</div>
            </div>
          </div>

          <!-- Follow Button -->
          <div class="author-actions">
            <button class="follow-author-btn" onclick="toggleFollow()">
              <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
              <span>Follow Author</span>
            </button>
            <button class="share-author-btn" onclick="shareAuthor()">
              <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
              </svg>
              <span>Share</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Author Content -->
  <div class="container-custom author-content-wrapper">
    <!-- About Section -->
    <% if (author.bio || author.biography) { %>
      <section class="author-about-section">
        <div class="about-card">
          <h2 class="section-title-author">About the Author</h2>
          <div class="about-content">
            <% if (author.biography) { %>
              <div class="biography-full"><%- author.biography %></div>
            <% } else if (author.bio) { %>
              <p class="biography-text"><%= author.bio %></p>
            <% } %>

            <!-- Awards & Achievements -->
            <% if (author.awards && author.awards.length > 0) { %>
              <div class="awards-section">
                <h3 class="awards-title">Awards & Achievements</h3>
                <ul class="awards-list">
                  <% author.awards.forEach(award => { %>
                    <li class="award-item">
                      <svg class="award-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 9H4.5a2.5 2.5 0 010-5H6M18 9h1.5a2.5 2.5 0 000-5H18M6 9v6M18 9v6M6 15h12M12 3v18M6 21h12"/>
                      </svg>
                      <span class="award-text"><%= award %></span>
                    </li>
                  <% }); %>
                </ul>
              </div>
            <% } %>

            <!-- Notable Works -->
            <% if (author.notableWorks && author.notableWorks.length > 0) { %>
              <div class="notable-works-section">
                <h3 class="notable-title">Notable Works</h3>
                <div class="notable-list">
                  <% author.notableWorks.forEach(work => { %>
                    <span class="notable-tag"><%= work %></span>
                  <% }); %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </section>
    <% } %>

    <!-- Books by Author -->
    <section class="author-books-section">
      <div class="books-header">
        <h2 class="section-title-author">Books by <%= author.name %></h2>
        
        <!-- Sort & Filter -->
        <div class="books-controls">
          <select onchange="sortBooks(this.value)" class="books-sort-select">
            <option value="newest">Newest First</option>
            <option value="title">Title: A-Z</option>
            <option value="price-low">Price: Low to High</option>
            <option value="price-high">Price: High to Low</option>
            <option value="popular">Most Popular</option>
          </select>
        </div>
      </div>

      <% if (!items || items.length === 0) { %>
        <div class="no-books-found">
          <div class="no-books-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="no-books-title">No books found</h3>
          <p class="no-books-text">Check back soon for new titles from this author.</p>
        </div>
      <% } else { %>
        <div class="author-books-grid">
          <%- include('../partials/product-grid', { items }) %>
        </div>

        <!-- Pagination -->
        <% if (total > perPage) { %>
          <div class="author-pagination">
            <%- include('../partials/pagination', { total, page, perPage }) %>
          </div>
        <% } %>
      <% } %>
    </section>

    <!-- Similar Authors -->
    <section class="similar-authors-section">
      <h2 class="section-title-author">Similar Authors You Might Like</h2>
      <div class="similar-authors-grid">
        <% 
          const similarAuthors = [
            { name: 'Haruki Murakami', slug: 'haruki-murakami' },
            { name: 'Colleen Hoover', slug: 'colleen-hoover' },
            { name: 'Franz Kafka', slug: 'franz-kafka' },
            { name: 'Narayan Wagle', slug: 'narayan-wagle' }
          ];
        %>
        <% similarAuthors.forEach(auth => { %>
          <a href="/author/<%= auth.slug %>" class="similar-author-card">
            <div class="similar-author-avatar">
              <%= auth.name.charAt(0) %>
            </div>
            <div class="similar-author-name"><%= auth.name %></div>
          </a>
        <% }); %>
      </div>
    </section>
  </div>
</div>

