/* Similar Authors */
.similar-authors-section {
  background: white;
  border-radius: 24px;
  padding: 48px;
  box-shadow: 0 4px 30px rgba(13, 13, 15, 0.08);
}

.similar-authors-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
}

