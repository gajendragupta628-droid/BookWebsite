  .auth-page {
    padding: 32px 20px;
  }
}

@media (min-width: 768px) {
  .auth-page {
    padding: 40px 20px;
  }
}

.auth-container {
  width: 100%;
  max-width: 1100px;
}

.auth-card {
  display: grid;
  grid-template-columns: 1fr;
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(13, 13, 15, 0.15);
}

@media (min-width: 640px) {
  .auth-card {
    border-radius: 20px;
  }
}

