}

/* Right Side - Form - Mobile First */
.auth-form-section {
  padding: 32px 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

@media (min-width: 640px) {
  .auth-form-section {
    padding: 40px 32px;
  }
}

@media (min-width: 768px) {
  .auth-form-section {
    padding: 60px 48px;
  }
}

.form-header {
  margin-bottom: 32px;
