<div class="wishlist-page">
  <div class="container-custom wishlist-wrapper">
    <!-- Page Header -->
    <div class="wishlist-header">
      <div class="header-content">
        <h1 class="wishlist-title">My Wishlist</h1>
        <p class="wishlist-subtitle">Your saved books and reading list</p>
      </div>
      
      <% if ((wishlist.items||[]).length > 0) { %>
        <div class="header-actions">
          <button class="share-wishlist-btn" onclick="shareWishlist()">
            <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
            </svg>
            <span>Share Wishlist</span>
          </button>
          <button class="clear-wishlist-btn" onclick="if(confirm('Clear entire wishlist?')) clearWishlist()">
            Clear All
          </button>
        </div>
      <% } %>
    </div>

    <% if (!(wishlist.items||[]).length) { %>
      <!-- Empty Wishlist State -->
      <div class="wishlist-empty">
        <div class="empty-wishlist-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h2 class="empty-wishlist-title">Your wishlist is empty</h2>
        <p class="empty-wishlist-description">
          Start adding books you love to your wishlist. It's a great way to save items for later or share your reading interests with friends!
        </p>
        <div class="empty-wishlist-actions">
          <a href="/search" class="btn-primary-large">Discover Books</a>
          <a href="/search?sort=popular" class="btn-secondary-outline">Browse Bestsellers</a>
        </div>

        <!-- Why Use Wishlist -->
        <div class="wishlist-benefits">
          <h3 class="benefits-title">Why use a wishlist?</h3>
          <div class="benefits-grid">
            <div class="benefit-card">
              <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              <h4 class="benefit-title">Save for Later</h4>
              <p class="benefit-text">Keep track of books you want to read</p>
            </div>
            <div class="benefit-card">
              <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <h4 class="benefit-title">Price Alerts</h4>
              <p class="benefit-text">Get notified when prices drop</p>
            </div>
            <div class="benefit-card">
              <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2v2m0 0v13m-2-5h2m-2 0h2m-6 0h2m-2 0h2m-6 0h2m-2 0h2"/>
              </svg>
              <h4 class="benefit-title">Share with Friends</h4>
              <p class="benefit-text">Perfect for gift ideas</p>
            </div>
            <div class="benefit-card">
              <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <h4 class="benefit-title">Quick Purchase</h4>
              <p class="benefit-text">Add all to cart with one click</p>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <!-- Wishlist with Items -->
      <div class="wishlist-content">
        <!-- Wishlist Stats -->
        <div class="wishlist-stats">
          <div class="stat-box">
            <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <div class="stat-info">
              <div class="stat-value"><%= (wishlist.items||[]).length %></div>
              <div class="stat-label">Items in Wishlist</div>
            </div>
          </div>
          <div class="stat-box">
            <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="stat-info">
              <div class="stat-value">
                <%= store.currency %>&nbsp;
                <% 
                  const totalValue = items.reduce((sum, book) => sum + (book.priceSale || 0), 0);
                %>
                <%= totalValue.toFixed(2) %>
              </div>
              <div class="stat-label">Total Value</div>
            </div>
          </div>
          <div class="stat-box">
            <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="stat-info">
              <div class="stat-value"><%= items.filter(b => (b.stock === undefined || b.stock > 0)).length %></div>
              <div class="stat-label">In Stock</div>
            </div>
          </div>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions">
          <button class="bulk-action-btn primary" onclick="addAllToCart()">
            <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <span>Add All to Cart</span>
          </button>
          <button class="bulk-action-btn secondary" onclick="moveToCart('selected')">
            <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Add Selected</span>
          </button>
        </div>

        <!-- Wishlist Grid -->
        <div class="wishlist-grid">
          <% items.forEach(book => { %>
            <div class="wishlist-item" data-book-id="<%= book._id %>">
              <!-- Checkbox for Selection -->
              <input 
                type="checkbox" 
                class="item-checkbox" 
                data-id="<%= book._id %>"
                onchange="updateBulkActions()"
              />

              <!-- Book Card -->
              <div class="wishlist-book-card">
                <a href="/book/<%= book.slug %>" class="book-image-link">
                  <div class="book-image-container">
                    <% const imgSrc = (book.images && book.images[0] && book.images[0].src) ? book.images[0].src : (book.isbn ? `https://covers.openlibrary.org/b/isbn/${book.isbn}-L.jpg` : 'https://images.pexels.com/photos/762686/pexels-photo-762686.jpeg?auto=compress&cs=tinysrgb&w=600'); %>
                    <img src="<%= imgSrc %>" alt="<%= book.title %>" class="book-image" />
                    
                    <% if (book.discountPercent) { %>
                      <span class="book-discount-badge">-<%= book.discountPercent %>%</span>
                    <% } %>
                  </div>
                </a>

                <div class="book-info">
                  <a href="/book/<%= book.slug %>" class="book-title"><%= book.title %></a>
                  
                  <% if (book.authors) { %>
                    <div class="book-author">
                      by <%= book.authors %>
                    </div>
                  <% } %>

                  <!-- Rating -->
                  <div class="book-rating">
                    <div class="stars-small">
                      <% const rating = (book.ratingsAggregate && book.ratingsAggregate.avg) || 4.5; %>
                      <% for(let i = 0; i < 5; i++) { %>
                        <span class="star-sm <%= i < Math.floor(rating) ? 'filled' : '' %>">★</span>
                      <% } %>
                    </div>
                    <span class="rating-text-sm"><%= rating.toFixed(1) %></span>
                  </div>

                  <!-- Price -->
                  <div class="book-price">
                    <span class="price-current"><%= store.currency %>&nbsp;<%= book.priceSale.toFixed(2) %></span>
                    <% if (book.priceMRP && book.priceMRP > book.priceSale) { %>
                      <span class="price-original-sm"><%= store.currency %>&nbsp;<%= book.priceMRP.toFixed(2) %></span>
                    <% } %>
                  </div>

                  <!-- Stock Status -->
                  <div class="book-stock">
                    <% if (book.stock === undefined || book.stock > 10) { %>
                      <span class="stock-badge-sm in-stock">
                        <svg class="stock-icon-sm" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>In Stock</span>
                      </span>
                    <% } else if (book.stock > 0) { %>
                      <span class="stock-badge-sm low-stock">
                        <svg class="stock-icon-sm" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <span>Only <%= book.stock %> left</span>
                      </span>
                    <% } else { %>
                      <span class="stock-badge-sm out-stock">
                        <svg class="stock-icon-sm" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        <span>Out of Stock</span>
                      </span>
                    <% } %>
                  </div>

                  <!-- Actions -->
                  <div class="book-actions">
                    <button 
                      class="add-to-cart-btn-sm" 
                      data-add-to-cart 
                      data-id="<%= book._id %>"
                      <%= (book.stock !== undefined && book.stock === 0) ? 'disabled' : '' %>
                    >
                      <svg class="btn-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                      </svg>
                      <span>Add to Cart</span>
                    </button>
                    <button 
                      class="remove-from-wishlist-btn" 
                      data-toggle-wishlist 
                      data-id="<%= book._id %>"
                      title="Remove from wishlist"
                      aria-label="Remove from wishlist"
                    >
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                      </svg>
                    </button>
                  </div>

                  <!-- Added Date -->
                  <div class="added-date">
                    <svg class="date-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                      <path d="M16 2v4M8 2v4M3 10h18"/>
                    </svg>
                    <span class="date-text">Added recently</span>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <!-- Share Wishlist Modal Placeholder -->
        <div id="shareModal" class="share-modal" style="display: none;">
          <div class="share-modal-content">
            <button class="close-modal" onclick="closeShareModal()">×</button>
            <h3 class="share-modal-title">Share Your Wishlist</h3>
            <p class="share-modal-description">Share your reading wishlist with friends and family!</p>
            
            <div class="share-link-section">
              <input 
                type="text" 
                id="shareLink" 
                value="<%= `${process.env.SITE_URL || 'https://yoursite.com'}/wishlist/shared/${session.userId || 'demo'}` %>" 
                class="share-link-input"
                readonly
              />
              <button class="copy-link-btn" onclick="copyShareLink()">Copy Link</button>
            </div>

            <div class="share-social">
              <button class="share-social-btn facebook" onclick="shareOnFacebook()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                <span>Facebook</span>
              </button>
              <button class="share-social-btn twitter" onclick="shareOnTwitter()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
                <span>Twitter</span>
              </button>
              <button class="share-social-btn whatsapp" onclick="shareOnWhatsApp()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <span>WhatsApp</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Recommendations -->
    <section class="recommendations-section">
      <h2 class="recommendations-title">You Might Also Like</h2>
      <div class="recommendations-placeholder">
        <p>Discover more books based on your interests</p>
        <a href="/search?sort=popular" class="btn-secondary">Browse All Books</a>
      </div>
    </section>
  </div>
</div>

<style>
/* Wishlist Page Styles */
.wishlist-page {
  background: #fafafa;
  padding: 40px 0 80px;
  min-height: 100vh;
}

.wishlist-wrapper {
  padding: 20px 24px;
}

/* Wishlist Header */
.wishlist-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.header-content {}

.wishlist-title {
  font-family: 'Playfair Display', serif;
  font-size: 40px;
  font-weight: 700;
  color: #0d0d0f;
  margin-bottom: 8px;
}

.wishlist-subtitle {
  font-size: 16px;
  color: rgba(13, 13, 15, 0.6);
}

.header-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.share-wishlist-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  background: #0d0d0f;
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 500;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 8px rgba(13, 13, 15, 0.15);
}

.share-wishlist-btn:hover {
  background: #1a1a1d;
  box-shadow: 0 4px 12px rgba(13, 13, 15, 0.25);
  transform: translateY(-1px);
}

.clear-wishlist-btn {
  padding: 12px 24px;
  background: white;
  color: rgba(13, 13, 15, 0.6);
  border: 1px solid rgba(13, 13, 15, 0.12);
  border-radius: 8px;
  font-weight: 500;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.clear-wishlist-btn:hover {
  border-color: rgba(231, 76, 60, 0.3);
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.05);
}

/* Empty Wishlist */
.wishlist-empty {
  background: white;
  border-radius: 12px;
  padding: 80px 40px;
  text-align: center;
  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.06);
  margin-bottom: 48px;
}

.empty-wishlist-icon {
  width: 100px;
  height: 100px;
  margin: 0 auto 24px;
  opacity: 0.4;
  color: rgba(13, 13, 15, 0.4);
}

.empty-wishlist-title {
  font-family: 'Playfair Display', serif;
  font-size: 36px;
  font-weight: 700;
  color: #0d0d0f;
  margin-bottom: 16px;
}

.empty-wishlist-description {
  font-size: 17px;
  line-height: 1.6;
  color: rgba(13, 13, 15, 0.6);
  max-width: 500px;
  margin: 0 auto 32px;
}

.empty-wishlist-actions {
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 64px;
}

/* Wishlist Benefits */
.wishlist-benefits {
  padding-top: 48px;
  border-top: 1px solid rgba(13, 13, 15, 0.1);
}

.benefits-title {
  font-family: 'Playfair Display', serif;
  font-size: 28px;
  font-weight: 700;
  color: #0d0d0f;
  margin-bottom: 32px;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
}

@media (min-width: 768px) {
  .benefits-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.benefit-card {
  padding: 24px;
  background: rgba(13, 13, 15, 0.02);
  border: 1px solid rgba(13, 13, 15, 0.08);
  border-radius: 12px;
  text-align: center;
}

.benefit-icon {
  width: 40px;
  height: 40px;
  margin: 0 auto 12px;
  color: rgba(13, 13, 15, 0.6);
}

.benefit-title {
  font-size: 16px;
  font-weight: 700;
  color: #0d0d0f;
  margin-bottom: 8px;
}

.benefit-text {
  font-size: 14px;
  color: rgba(13, 13, 15, 0.6);
  line-height: 1.5;
}

/* Wishlist Content */
.wishlist-content {
  margin-bottom: 48px;
}

/* Wishlist Stats */
.wishlist-stats {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
  margin-bottom: 24px;
}

@media (min-width: 768px) {
  .wishlist-stats {
    grid-template-columns: repeat(3, 1fr);
  }
}

.stat-box {
  display: flex;
  align-items: center;
