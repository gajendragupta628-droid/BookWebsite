<div class="order-success-page">
  <div class="order-success-container">
    <div class="success-icon-wrapper">
      <svg class="success-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <h1 class="success-title">Thank you for your order!</h1>
    <p class="success-subtitle">Your order number is <span class="order-number"><%= order.number %></span></p>
    
    <div class="order-summary-card">
      <h2 class="summary-title">Order Summary</h2>
      <div class="summary-items">
        <% order.items.forEach(function(it){ %>
          <div class="summary-item">
            <span class="item-name"><%= it.titleSnapshot %> Ã— <%= it.qty %></span>
            <span class="item-price"><%= store.currency %>&nbsp;<%= (it.qty * it.priceAtPurchase).toFixed(2) %></span>
          </div>
        <% }) %>
      </div>
      <div class="summary-total">
        <span>Total</span>
        <span><%= store.currency %>&nbsp;<%= order.totals.grandTotal.toFixed(2) %></span>
      </div>
    </div>
    
    <div class="success-actions">
      <a href="/" class="btn-continue">Continue Shopping</a>
      <a href="/account?tab=orders" class="btn-orders">View My Orders</a>
    </div>
  </div>
</div>

