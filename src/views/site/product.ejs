<div class="product-page">
  <div class="container-custom product-wrapper">
    <div class="product-grid">
      <!-- Left Column: Images -->
      <div class="product-images">
        <div class="main-image-container">
          <% const primaryImg = (book.images && book.images[0] && book.images[0].src) ? book.images[0].src : (book.isbn13 ? `https://covers.openlibrary.org/b/isbn/${book.isbn13}-L.jpg` : (book.isbn10 ? `https://covers.openlibrary.org/b/isbn/${book.isbn10}-L.jpg` : 'https://images.pexels.com/photos/1370295/pexels-photo-1370295.jpeg?auto=compress&cs=tinysrgb&w=800')); %>
          <img src="<%= primaryImg %>" alt="<%= (book.images && book.images[0] && (book.images[0].alt || book.title)) || book.title %>" class="main-product-image" id="mainProductImage" />
          
          <!-- Badges -->
          <div class="product-badges">
            <% if (book.discountPercent && book.discountPercent > 0) { %>
              <span class="badge-discount">-<%= book.discountPercent %>% OFF</span>
            <% } %>
            <% 
              // Check if book is new (created within last 30 days)
              const isNew = book.createdAt && (new Date() - new Date(book.createdAt)) < (30 * 24 * 60 * 60 * 1000);
              // Check if book is bestseller (has high sales)
              const isBestseller = book.sales && book.sales > 50;
            %>
            <% if (isNew) { %>
              <span class="badge-new">NEW</span>
            <% } %>
            <% if (isBestseller) { %>
              <span class="badge-bestseller">BESTSELLER</span>
            <% } %>
          </div>
        </div>

        <!-- Thumbnail Gallery -->
        <% if (book.images && book.images.length > 1) { %>
          <div class="thumbnail-gallery">
            <% (book.images||[]).slice(0,5).forEach(function(img, idx){ %>
              <button class="thumbnail <%= idx === 0 ? 'active' : '' %>" onclick="switchImage('<%= img.src %>', this)">
                <img src="<%= img.src || primaryImg %>" alt="View <%= idx + 1 %>" />
              </button>
            <% }) %>
          </div>
        <% } %>

        <!-- Trust Signals -->
        <div class="trust-signals">
          <div class="trust-item">
            <svg class="trust-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12H19M5 12L2 9M5 12L2 15M19 12L22 9M19 12L22 15M12 2L12 22M2 12L22 12"/>
            </svg>
            <div class="trust-text">
              <div class="trust-title">Fast Delivery</div>
              <div class="trust-desc">2-5 days across Nepal</div>
            </div>
          </div>
          <div class="trust-item">
            <svg class="trust-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="8" width="18" height="14" rx="2"/>
              <path d="M3 8L12 2L21 8"/>
            </svg>
            <div class="trust-text">
              <div class="trust-title">Easy Returns</div>
              <div class="trust-desc">7-day return policy</div>
            </div>
          </div>
          <div class="trust-item">
            <svg class="trust-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11L12 14L22 4M21 12V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H16"/>
            </svg>
            <div class="trust-text">
              <div class="trust-title">Authentic Books</div>
              <div class="trust-desc">100% genuine</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Product Info -->
      <div class="product-info">
        <!-- Breadcrumb -->
        <nav class="breadcrumb-mini">
          <a href="/">Home</a> 
          <span>/</span>
          <% if (book.categories && book.categories.length > 0) { %>
            <span><%= book.categories[0] %></span>
            <span>/</span>
          <% } %>
          <span><%= book.title %></span>
        </nav>

        <!-- Title & Author -->
        <h1 class="product-title"><%= book.title %></h1>
        <% if (book.authors) { %>
          <div class="product-author">
            by <%= book.authors %>
          </div>
        <% } %>

        <!-- Key Details (quick scan) -->
        <%
          const metaItems = [];
          const primaryIsbn = book.isbn13 || book.isbn10;
          if (book.publisher) metaItems.push({ label: 'Publisher', value: book.publisher });
          if (book.language) metaItems.push({ label: 'Language', value: book.language });
          if (book.binding) metaItems.push({ label: 'Binding', value: book.binding });
          if (book.format) metaItems.push({ label: 'Format', value: book.format });
          if (book.condition) metaItems.push({ label: 'Condition', value: book.condition === 'new' ? 'New' : (book.condition === 'used' ? 'Used' : book.condition) });
          if (book.pages) metaItems.push({ label: 'Pages', value: String(book.pages) });
          if (book.publicationDate) metaItems.push({ label: 'Published', value: new Date(book.publicationDate).getFullYear() });
          if (primaryIsbn) metaItems.push({ label: 'ISBN', value: primaryIsbn });
        %>
        <% if (metaItems.length > 0 || (book.categories && book.categories.length > 0)) { %>
          <div class="product-meta">
            <% metaItems.forEach(function(item){ %>
              <div class="meta-pill" title="<%= item.label %>">
                <span class="meta-label"><%= item.label %>:</span>
                <span class="meta-value"><%= item.value %></span>
              </div>
            <% }) %>
            <% if (book.categories && book.categories.length > 0) { %>
              <% book.categories.slice(0, 4).forEach(function(cat){ %>
                <div class="meta-pill meta-pill-category" title="Category">
                  <span class="meta-value"><%= cat %></span>
                </div>
              <% }) %>
            <% } %>
          </div>
        <% } %>


        <!-- Price -->
        <div class="product-pricing">
          <div class="price-row-main">
            <span class="price-main"><%= store.currency %>&nbsp;<%= book.priceSale.toFixed(2) %></span>
          </div>
          <% if (book.priceMRP && book.priceMRP > book.priceSale) { %>
            <div class="price-row-secondary">
              <span class="price-original"><%= store.currency %>&nbsp;<%= (book.priceMRP).toFixed(2) %></span>
            </div>
            <% 
              const discountPercent = book.discountPercent || Math.round(((book.priceMRP - book.priceSale) / book.priceMRP) * 100);
            %>
            <div class="price-row-discount">
              <span class="price-save">Save <%= discountPercent %>% (<%= store.currency %>&nbsp;<%= (book.priceMRP - book.priceSale).toFixed(2) %>)</span>
            </div>
          <% } %>
        </div>

        <!-- Stock Status -->
        <div class="stock-status">
          <% if (book.stock === undefined || book.stock > 10) { %>
            <span class="status-badge in-stock">
              <svg class="status-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>In Stock</span>
            </span>
          <% } else if (book.stock > 0) { %>
            <span class="status-badge low-stock">
              <svg class="status-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <span>Only <%= book.stock %> left</span>
            </span>
          <% } else { %>
            <span class="status-badge out-stock">
              <svg class="status-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <span>Out of Stock</span>
            </span>
          <% } %>
        </div>

        <!-- Quick Description -->
        <% if (book.summary) { %>
          <p class="product-summary"><%= book.summary %></p>
        <% } %>

        <!-- Action Buttons -->
        <div class="product-actions">
          <form onsubmit="return false;" class="quantity-form">
            <label class="qty-label">Quantity:</label>
            <div class="qty-controls">
              <button type="button" class="qty-btn" onclick="decrementQty()">−</button>
              <input type="number" min="1" value="1" id="qty" class="qty-input" />
              <button type="button" class="qty-btn" onclick="incrementQty()">+</button>
            </div>
          </form>

          <div class="action-buttons">
            <button data-add-to-cart data-id="<%= book._id %>" class="btn-add-cart" data-state="idle">
              <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <span class="btn-text">Add to Cart</span>
            </button>
            <button data-buy-now data-id="<%= book._id %>" class="btn-buy-now">
              <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <span class="btn-text">Buy Now</span>
            </button>
          </div>

          <% const inWL = (session && session.wishlist && (session.wishlist.items||[]).includes(String(book._id))); %>
          <button data-toggle-wishlist data-id="<%= book._id %>" aria-pressed="<%= inWL ? 'true' : 'false' %>" class="btn-wishlist <%= inWL ? 'active' : '' %>">
            <svg class="btn-icon" fill="<%= inWL ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <span class="btn-text"><%= inWL ? 'In Wishlist' : 'Add to Wishlist' %></span>
          </button>
        </div>

        <!-- Product Highlights -->
        <div class="product-highlights">
          <div class="highlight-title">Why you'll love this book:</div>
          <ul class="highlight-list">
            <li>Carefully curated for quality content</li>
            <li>Authentic and brand new condition</li>
            <li>Fast shipping across Nepal</li>
            <li>Easy returns within 7 days</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Product Details Tabs -->
    <div class="product-tabs">
      <div class="tabs-header">
        <button class="tab-btn active" onclick="switchTab('description')">Description</button>
        <button class="tab-btn" onclick="switchTab('details')">Product Details</button>
      </div>

      <div class="tabs-content">
        <!-- Description Tab -->
        <div class="tab-panel active" id="tab-description">
          <div class="description-content">
            <% if (book.descriptionHTML) { %>
              <div class="prose-custom"><%- book.descriptionHTML %></div>
            <% } else if (book.summary) { %>
              <p class="description-text"><%= book.summary %></p>
            <% } else { %>
              <p class="description-text">Discover an exceptional reading experience with this carefully selected title. Perfect for readers seeking quality literature and meaningful content.</p>
            <% } %>
          </div>
        </div>

        <!-- Product Details Tab -->
        <div class="tab-panel" id="tab-details">
          <div class="details-grid">
            <% if (book.isbn13) { %>
              <div class="detail-item">
                <div class="detail-label">ISBN-13</div>
                <div class="detail-value"><%= book.isbn13 %></div>
              </div>
            <% } %>
            <% if (book.isbn10) { %>
              <div class="detail-item">
                <div class="detail-label">ISBN-10</div>
                <div class="detail-value"><%= book.isbn10 %></div>
              </div>
            <% } %>
            <% if (book.binding) { %>
              <div class="detail-item">
                <div class="detail-label">Binding</div>
                <div class="detail-value"><%= book.binding %></div>
              </div>
            <% } %>
            <% if (book.pages) { %>
              <div class="detail-item">
                <div class="detail-label">Pages</div>
                <div class="detail-value"><%= book.pages %></div>
              </div>
            <% } %>
            <% if (book.language) { %>
              <div class="detail-item">
                <div class="detail-label">Language</div>
                <div class="detail-value"><%= book.language %></div>
              </div>
            <% } %>
            <% if (book.publisher) { %>
              <div class="detail-item">
                <div class="detail-label">Publisher</div>
                <div class="detail-value"><%= book.publisher %></div>
              </div>
            <% } %>
            <% if (book.publicationDate) { %>
              <div class="detail-item">
                <div class="detail-label">Publication Date</div>
                <div class="detail-value"><%= new Date(book.publicationDate).toLocaleDateString() %></div>
              </div>
            <% } %>
            <% if (book.edition) { %>
              <div class="detail-item">
                <div class="detail-label">Edition</div>
                <div class="detail-value"><%= book.edition %></div>
              </div>
            <% } %>
            <% if (book.weightGrams) { %>
              <div class="detail-item">
                <div class="detail-label">Weight</div>
                <div class="detail-value"><%= book.weightGrams %> grams</div>
              </div>
            <% } %>
            <% if (book.dimensions && (book.dimensions.L || book.dimensions.W || book.dimensions.H)) { %>
              <div class="detail-item">
                <div class="detail-label">Dimensions (L×W×H)</div>
                <div class="detail-value"><%= [book.dimensions.L, book.dimensions.W, book.dimensions.H].filter(Boolean).join(' × ') %> cm</div>
              </div>
            <% } %>
            <% if (book.categories && book.categories.length > 0) { %>
              <div class="detail-item">
                <div class="detail-label">Categories</div>
                <div class="detail-value"><%= book.categories.join(', ') %></div>
              </div>
            <% } %>
          </div>
        </div>

      </div>
    </div>

    <!-- Related Books -->
    <% if (related && related.length > 0) { %>
      <div class="related-section">
        <h2 class="related-title">You May Also Like</h2>
        <div class="related-grid">
          <% related.slice(0, 4).forEach(relatedBook => { %>
            <%- include('../partials/product-card', { book: relatedBook, session, store }) %>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>
</div>

