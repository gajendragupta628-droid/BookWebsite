<aside class="search-filters">
  <div class="filters-header">
    <h3 class="filters-title">Filters</h3>
    <button type="button" class="filters-reset" onclick="resetFilters()">Clear All</button>
  </div>

  <form method="get" class="filters-form" id="filtersForm">
    <!-- Preserve search query -->
    <% if (filters && filters.q) { %>
      <input type="hidden" name="q" value="<%= filters.q %>" />
    <% } %>

    <!-- Category Filter -->
    <% if (categories && categories.length > 0) { %>
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <h4 class="filter-group-title">Category</h4>
      </div>
      <div class="filter-options">
        <label class="filter-radio">
          <input 
            type="radio" 
            name="category" 
            value="" 
            <%= (!filters || !filters.category)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">All Categories</span>
        </label>
        <% categories.forEach(cat => { %>
          <label class="filter-radio">
            <input 
              type="radio" 
              name="category" 
              value="<%= cat.name %>" 
              <%= (filters && filters.category === cat.name)?'checked':'' %>
              onchange="document.getElementById('filtersForm').submit()"
            />
            <span class="radio-custom"></span>
            <span class="radio-label"><%= cat.name %> (<%= cat.count %>)</span>
          </label>
        <% }); %>
      </div>
    </div>
    <% } %>

    <!-- Availability Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.27 6.96L12 12l8.73-5.04"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 22V12"/>
        </svg>
        <h4 class="filter-group-title">Availability</h4>
      </div>
      <div class="filter-options">
        <label class="filter-checkbox">
          <input 
            type="checkbox" 
            name="inStock" 
            value="1" 
            <%= (filters && filters.inStock)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="checkbox-custom">
            <svg class="checkbox-check" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </span>
          <span class="checkbox-label">In Stock Only</span>
        </label>
        <label class="filter-checkbox">
          <input 
            type="checkbox" 
            name="preorder" 
            value="1" 
            <%= (filters && filters.preorder)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="checkbox-custom">
            <svg class="checkbox-check" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </span>
          <span class="checkbox-label">Pre-orders</span>
        </label>
      </div>
    </div>

    <!-- Price Range Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12H9"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9h4v6h-4a3 3 0 010-6z"/>
        </svg>
        <h4 class="filter-group-title">Price Range</h4>
      </div>
      <div class="filter-options">
        <div class="price-inputs">
          <input 
            name="min" 
            type="number" 
            placeholder="Min रू" 
            value="<%= filters && filters.priceMin || '' %>" 
            class="price-input"
          />
          <span class="price-separator">—</span>
          <input 
            name="max" 
            type="number" 
            placeholder="Max रू" 
            value="<%= filters && filters.priceMax || '' %>" 
            class="price-input"
          />
        </div>
        
        <!-- Quick Price Ranges -->
        <div class="price-quick-links">
          <button type="button" class="price-tag" onclick="setPrice(0, 500)">Under रू500</button>
          <button type="button" class="price-tag" onclick="setPrice(500, 1000)">रू500-रू1000</button>
          <button type="button" class="price-tag" onclick="setPrice(1000, 2000)">रू1000-रू2000</button>
          <button type="button" class="price-tag" onclick="setPrice(2000, 99999)">Above रू2000</button>
        </div>
      </div>
    </div>

    <!-- Language Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <circle cx="12" cy="12" r="10" stroke-width="2"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2 12h20"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
        </svg>
        <h4 class="filter-group-title">Language</h4>
      </div>
      <div class="filter-options">
        <label class="filter-radio">
          <input 
            type="radio" 
            name="language" 
            value="" 
            <%= (!filters || !filters.language)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">All Languages</span>
        </label>
        <label class="filter-radio">
          <input 
            type="radio" 
            name="language" 
            value="English" 
            <%= (filters && filters.language === 'English')?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">English</span>
        </label>
        <label class="filter-radio">
          <input 
            type="radio" 
            name="language" 
            value="Nepali" 
            <%= (filters && filters.language === 'Nepali')?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">Nepali</span>
        </label>
      </div>
    </div>

    <!-- Condition Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l1.2 4.6L18 8l-4.8 1.4L12 14l-1.2-4.6L6 8l4.8-1.4L12 2z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12l.7 2.7L8.4 15l-2.7.8L5 18l-.7-2.2L1.6 15l2.7-.3L5 12z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l.7 2.7 2.7.3-2.7.8L19 19l-.7-2.2-2.7-.8 2.7-.3L19 13z"/>
        </svg>
        <h4 class="filter-group-title">Condition</h4>
      </div>
      <div class="filter-options">
        <label class="filter-radio">
          <input 
            type="radio" 
            name="condition" 
            value="" 
            <%= (!filters || !filters.condition)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">All</span>
        </label>
        <label class="filter-radio">
          <input 
            type="radio" 
            name="condition" 
            value="new" 
            <%= (filters && filters.condition === 'new')?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">New</span>
        </label>
        <label class="filter-radio">
          <input 
            type="radio" 
            name="condition" 
            value="used" 
            <%= (filters && filters.condition === 'used')?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">Used</span>
        </label>
      </div>
    </div>

    <!-- Binding Type Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <h4 class="filter-group-title">Binding</h4>
      </div>
      <div class="filter-options">
        <label class="filter-checkbox">
          <input 
            type="checkbox" 
            name="hardcover" 
            value="1" 
            <%= (filters && filters.hardcover)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="checkbox-custom">
            <svg class="checkbox-check" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </span>
          <span class="checkbox-label">Hardcover</span>
        </label>
        <label class="filter-checkbox">
          <input 
            type="checkbox" 
            name="paperback" 
            value="1" 
            <%= (filters && filters.paperback)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="checkbox-custom">
            <svg class="checkbox-check" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </span>
          <span class="checkbox-label">Paperback</span>
        </label>
      </div>
    </div>

    <!-- Rating Filter -->
    <div class="filter-group">
      <div class="filter-group-header">
        <svg class="filter-group-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
        </svg>
        <h4 class="filter-group-title">Rating</h4>
      </div>
      <div class="filter-options">
        <label class="filter-radio">
          <input 
            type="radio" 
            name="rating" 
            value="" 
            <%= (!filters || !filters.rating)?'checked':'' %>
            onchange="document.getElementById('filtersForm').submit()"
          />
          <span class="radio-custom"></span>
          <span class="radio-label">All Ratings</span>
        </label>
        <% for(let i = 4; i >= 3; i--) { %>
          <label class="filter-radio">
            <input 
              type="radio" 
              name="rating" 
              value="<%= i %>" 
              <%= (filters && filters.rating == i)?'checked':'' %>
              onchange="document.getElementById('filtersForm').submit()"
            />
            <span class="radio-custom"></span>
            <span class="radio-label">
              <span class="rating-stars">
                <% for(let j = 0; j < i; j++) { %>
                  <svg class="star-filled" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                <% } %>
              </span>
              & Up
            </span>
          </label>
        <% } %>
      </div>
    </div>

    <!-- Apply Button -->
    <button type="submit" class="filters-apply">
      <span>Apply Filters</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 18l6-6-6-6"/>
      </svg>
    </button>
  </form>
</aside>

<style>
/* Filters Sidebar Styles */
.search-filters {
  position: sticky;
  top: 100px;
  background: white;
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(13, 13, 15, 0.08);
  max-height: calc(100vh - 120px);
  overflow-y: auto;
}

.filters-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 2px solid rgba(13, 13, 15, 0.1);
}

.filters-title {
  font-family: 'Playfair Display', serif;
  font-size: 24px;
  font-weight: 700;
  color: #0d0d0f;
}

.filters-reset {
  background: none;
  border: none;
  color: #caa660;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  text-decoration: underline;
  transition: color 0.3s ease;
}

.filters-reset:hover {
  color: #b8954d;
}

.filters-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.filter-group {
  border-bottom: 1px solid rgba(13, 13, 15, 0.08);
  padding-bottom: 20px;
}

.filter-group:last-of-type {
  border-bottom: none;
  padding-bottom: 0;
}

.filter-group-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.filter-group-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.filter-group-title {
  font-size: 16px;
  font-weight: 700;
  color: #0d0d0f;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Custom Checkbox */
.filter-checkbox {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  position: relative;
}

.filter-checkbox input[type="checkbox"] {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}

.checkbox-custom {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(13, 13, 15, 0.2);
  border-radius: 4px;
  background: white;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.filter-checkbox input[type="checkbox"]:checked + .checkbox-custom {
  background: #caa660;
  border-color: #caa660;
}

.checkbox-check {
  width: 12px;
  height: 12px;
  color: #ffffff;
  opacity: 0;
  transform: scale(0.95);
  transition: opacity 0.2s ease, transform 0.2s ease;
}

.filter-checkbox input[type="checkbox"]:checked + .checkbox-custom .checkbox-check {
  opacity: 1;
  transform: scale(1);
}

.checkbox-label {
  font-size: 14px;
  color: #0d0d0f;
  user-select: none;
}

/* Custom Radio */
.filter-radio {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  position: relative;
}

.filter-radio input[type="radio"] {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}

.radio-custom {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(13, 13, 15, 0.2);
  border-radius: 50%;
  background: white;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.filter-radio input[type="radio"]:checked + .radio-custom {
  border-color: #caa660;
}

.filter-radio input[type="radio"]:checked + .radio-custom::after {
  content: '';
  width: 10px;
  height: 10px;
  background: #caa660;
  border-radius: 50%;
}

.radio-label {
  font-size: 14px;
  color: #0d0d0f;
  user-select: none;
}

/* Price Inputs */
.price-inputs {
  display: flex;
  align-items: center;
  gap: 8px;
}

.price-input {
  flex: 1;
  padding: 10px 12px;
  border: 2px solid rgba(13, 13, 15, 0.15);
  border-radius: 8px;
  font-size: 14px;
  transition: all 0.3s ease;
}

.price-input:focus {
  outline: none;
  border-color: #caa660;
}

.price-separator {
  color: rgba(13, 13, 15, 0.4);
  font-weight: 600;
}

.price-quick-links {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 8px;
}

.price-tag {
  padding: 6px 12px;
  background: #f8f6f2;
  border: 1px solid rgba(13, 13, 15, 0.1);
  border-radius: 50px;
  font-size: 12px;
  font-weight: 600;
  color: #0d0d0f;
  cursor: pointer;
  transition: all 0.3s ease;
}

.price-tag:hover {
  background: rgba(202, 166, 96, 0.1);
  border-color: #caa660;
  color: #caa660;
}

/* Rating Stars */
.rating-stars {
  display: inline-flex;
  gap: 2px;
}

.star-filled {
  color: #caa660;
  width: 14px;
  height: 14px;
}

/* Apply Button */
.filters-apply {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 14px 24px;
  background: #caa660;
  color: #0d0d0f;
  border: none;
  border-radius: 50px;
  font-weight: 700;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(202, 166, 96, 0.3);
  margin-top: 8px;
}

.filters-apply:hover {
  background: #d4b76f;
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(202, 166, 96, 0.4);
}

/* Mobile */
@media (max-width: 767px) {
  .search-filters {
    position: static;
    max-height: none;
  }
}
</style>

<script>
function resetFilters() {
  window.location.href = window.location.pathname;
}

function setPrice(min, max) {
  document.querySelector('input[name="min"]').value = min;
  document.querySelector('input[name="max"]').value = max;
  document.getElementById('filtersForm').submit();
}
</script>
