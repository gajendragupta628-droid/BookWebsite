# ============================================
# BOOK STORE - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# REQUIRED: Database Configuration
# --------------------------------------------
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database]

MONGODB_URI=mongodb://localhost:27017/bookstore

# --------------------------------------------
# REQUIRED: Session Configuration
# --------------------------------------------
# Generate a secure random string with: openssl rand -hex 32
# MUST be at least 32 characters in production
# DO NOT use default value in production!

SESSION_SECRET=change_this_to_a_random_32_character_string

# --------------------------------------------
# Application Configuration
# --------------------------------------------

# Server port
PORT=3000

# Environment: development or production
NODE_ENV=development

# Base URL of your application (used for email links, OAuth callbacks, etc.)
SITE_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Store branding
STORE_NAME=Motivational Books
STORE_CURRENCY=Rs.
CURRENCY=Rs.

# Trust proxy (set to true if behind reverse proxy like nginx)
TRUST_PROXY=false

# Enable Cash on Delivery
ENABLE_COD=true

# --------------------------------------------
# Google OAuth Configuration (OPTIONAL)
# --------------------------------------------
# Get these from: https://console.cloud.google.com/
# Guide: See SETUP_GOOGLE_AUTH.md
# If not configured, Google login will be disabled

GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# --------------------------------------------
# Email Configuration (OPTIONAL but RECOMMENDED)
# --------------------------------------------
# SMTP settings for sending order confirmations and notifications
# If not configured, emails will be logged to console only

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Admin email for receiving order notifications
ADMIN_EMAIL=admin@bookstore.com

# --------------------------------------------
# Cloudinary Configuration (OPTIONAL but RECOMMENDED)
# --------------------------------------------
# Get these from: https://cloudinary.com/
# Required for image uploads in admin panel
# If not configured, image uploads will fail

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Alternative variable names (for compatibility)
CLOUD_NAME=your_cloud_name
API_KEY=your_api_key
API_SECRET=your_api_secret

# --------------------------------------------
# Pexels API Configuration (OPTIONAL)
# --------------------------------------------
# Get your API key from: https://www.pexels.com/api/
# Sign up for a free account to get instant API access
# Rate limits: 200 requests/hour, 20,000 requests/month
# Used for fetching book cover images

PEXELS_API_KEY=your_pexels_api_key_here

# --------------------------------------------
# Admin Login / Bootstrap (RECOMMENDED for dev)
# --------------------------------------------
# In development, the app will auto-create an admin user using these values (if it doesn't already exist).
# In production, the app will only bootstrap an admin if BOTH vars are explicitly set.

ADMIN_PASSWORD=SecurePass123!

# ============================================
# IMPORTANT: Copy to .env and fill your values!
# ============================================
#
# REQUIRED for production:
# - MONGODB_URI
# - SESSION_SECRET (must be changed from default)
#
# RECOMMENDED for full functionality:
# - SMTP_HOST, SMTP_USER, SMTP_PASS (for emails)
# - CLOUDINARY_* (for image uploads)
#
# OPTIONAL:
# - GOOGLE_CLIENT_ID, GOOGLE_CLIENT_SECRET (for Google login)
# - PEXELS_API_KEY (for book cover images)
# ============================================
